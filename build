#!/bin/bash

export working_dir=$(pwd)
cd $(dirname $0)
export vdev_dir="$working_dir/.vdev"


source "$vdev_dir/vm"
source "$vdev_dir/conf"
source detail/utils
source detail/dictionary


#
# Parameters

solution_path=$1
target=$2
configuration=$3


#
# Main

solution_cache_dir=$(make_solution_cache_path "$solution_path" "$vdev_dir/cache")
solution_cache_path="$solution_cache_dir/solution.cache"
detail/cache_solution_info "$working_dir/$solution_path" "$solution_cache_path"

vs_version=$(dictionary_find "$solution_cache_path" 'version')

guest_solution_path="$guest_root_dir/$solution_path"
detail/"$vm"/execute "$guest_build_bat" "$vs_version" "$guest_solution_path" "$target" "$configuration"
retval=$?
printf '\n'

exit $retval

