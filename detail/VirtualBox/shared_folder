#!/bin/bash

source detail/utils
source "$vdev_dir/vm"


#
# Parameters

name=$1
path=$2


#
# Main

# if there is a shared folder already VBoxManage prints message, but returns without error
output=$("$vm_manage" sharedfolder add "$guest_name" --name "$name" --hostpath "$path" --automount 2>&1)
retval=$?
if [ $retval != 0 ]
then
	printf_stderr '%s\n' "$output"
	exit $retval
fi

