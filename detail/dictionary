dictionary_find()
{
	local array=$1
	local key=$2

	local record=$(grep "^$key=" "$array")
	printf '%s\n' "${record#*=}"
}


dictionary_insert()
{
	local array=$1
	local key=$2
	local value=$3

	if [ -f "$array" ]
	then
		local array_tmp="$array.tmp"
		trap "rm -f \"$array_tmp\"" EXIT

		grep -v "^$key=" "$array" > "$array_tmp"
		cat "$array_tmp" > "$array"
	fi

	printf '%s=%s\n' "$key" "$value" >> "$array"
}


